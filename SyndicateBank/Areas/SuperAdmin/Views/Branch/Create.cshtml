                                                                                                                                <th width="25%" align="center" valign="middle"> Delete  </th>
                                                                                                                            </tr>
                                                                                                                        </thead>
                                                                                                                        <tbody>
                                                                                                                            @foreach (var itembranch in Model.AvailableBranchs.Where(r => r.CityId == cityitem.Id))
                                                                                                                            {
                                                                                                                                @Html.HiddenFor(r => itembranch.Id)
                                                                                                                                int id = itembranch.Id;
                                                                                                                                <tr>
