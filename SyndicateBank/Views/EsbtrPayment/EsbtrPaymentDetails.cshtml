@model SyndicateBank.ViewModels.DisplayViewModel
@{
    ViewBag.Title = "EsbtrPaymentDetails";

}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>Payment of Stamp Duty and Registration Fees</title>

    <!-- Optional - Google font -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Gafata" />

    <link href="~/Content/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/flat-form.css" rel="stylesheet" />
    <link href="~/Content/assets/page-style.css" rel="stylesheet" />
    <style>
        legend.spLegend {
            background: #FAAD30;
            padding: 5px 15px !important;
            color: white !important;
            font-weight: 500;
            font-size: 22px;
        }

        ol.instructionul li {
            color: #000;
        }

        ul.options.open {
            border: solid 1px #000;
        }

        .panel-body form fieldset > .col-md-12 {
            padding: 0;
        }

        #eSBTRPaymentDetailsTable tbody tr th {
            background: #FAAD30;
        }
    </style>
</head>

<body>
    <div class="container">
        <header class="header">
            <div class="col-md-8">
                <h1>Payment of Stamp Duty and Registration Fees</h1>
            </div>
            <div class="col-md-4"> <img src="~/Content/assets/img/syndicate-bank-logo.png" class="img-responsive" style="width:100%; margin:3px 0"></div>
        </header>
        <div class="clearfix"></div>
        <div class="content">


            <article class="col-sm-12 col-md-12">
                <div class="col-md-9" style="float:none; margin-left:auto; margin-right:auto;">

                    <!-- START Registration form -->

                    <div class="panel panel-form">
                        <!-- Form header -->
                        <div class="panel-heading">
                            <h2 class="title">e-SBTR Payment Details</h2> <!---->
                        </div>
                        <div class="panel-body">
                            <form role="form" id="synd-eSBTRform">
                                <table id="eSBTRPaymentDetailsTable" width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th colspan="4">e-SBTR Payment Details</th>
                                        </tr>
                                        <tr>
                                            <td width="50%">Transaction Id</td>
                                            <td width="50%">@Model.BANK_REF_NO</td>
                                        </tr>

                                        <tr>
                                            <td width="20%">District</td>
                                            <td width="30%">@Model.TREASURY_CODE</td>
                                            <td width="15%">Office Name</td>
                                            <td width="35%">@Model.OFFICE_CODE</td>
                                        </tr>
                                    </tbody>
                                    <tbody>
                                        <tr>
                                            <th colspan="2">Object</th>
                                            <th colspan="2">Amount</th>
                                        </tr>
                                        <tr>
                                            <td>Stamp Duty</td>
                                            <td>@Model.HOA1</td>
                                            <td>Amount</td>
                                            <td>@Model.AMOUNT1</td>
                                        </tr>
                                        <tr>
                                            <td>Registration Fees</td>
                                            <td>@Model.HOA2</td>
                                            <td>Amount</td>
                                            <td>@Model.AMOUNT2</td>
                                        </tr>
                                        <tr>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                            <td>Total Amount</td>
                                            <td>@Model.CHALLAN_AMOUNT</td>
                                        </tr>
                                    </tbody>
                                    <tbody>
                                        <tr>
                                            <th colspan="4">Duty Payer Details</th>
                                        </tr>
                                        <tr>
                                            <td>Duty Payer Name</td>
                                            <td colspan="3">@Model.PARTY_NAME</td>
                                        </tr>
                                        <tr>
                                            <td>Duty Payer ID</td>
                                            <td colspan="3">@Model.PARTY_ID</td>
                                        </tr>
                                        <tr>
                                            <td>Duty Payer Mobile No</td>
                                            <td colspan="3">@Model.MOBILE_NO</td>
                                        </tr>
                                        <tr>
                                            <td>Duty Payer Email ID</td>
                                            <td colspan="3">@Model.EMAIL_ID</td>
                                        </tr>
                                    </tbody>
                                    <tbody>
                                        <tr>
                                            <th colspan="4">Property Details</th>
                                        </tr>
                                        <tr>
                                            <td>Article Code</td>
                                            <td>@Model.ARTICLE_CODE</td>
                                            <td>Movability</td>
                                            @if (Model.ESBTR_PM == "M")
                                            {
                                                <td>Yes</td>
                                            }
                                            else
                                            {
                                                <td>No</td>
                                            }
                                        </tr>
                                        <tr>
                                            <td rowspan="2" align="left" valign="middle">Particulars</td>
                                            <td>@Model.ADDRESS1</td>
                                            <td>@Model.ADDRESS2</td>
                                            <td>@Model.ADDRESS3</td>
                                        </tr>
                                        <tr>
                                            <td>@Model.PIN_NO</td>
                                            <td>@Model.EMAIL_ID</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td>Consideration Amount</td>
                                            <td>@Model.ESBTR_CA</td>
                                            <td>Property Area</td>
                                            <td>@Model.ESBTR_PA</td>
                                        </tr>
                                    </tbody>
                                    <tbody>
                                        <tr>
                                            <th colspan="4">Other Party Details</th>
                                        </tr>
                                        <tr>
                                            <td>Other Party Name</td>
                                            <td colspan="3">@Model.ESBTR_OP_NAME</td>
                                        </tr>
                                        <tr>
                                            <td>Other Party ID</td>
                                            <td colspan="3">@Model.ESBTR_OP_ID</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="form-group" align="center">
                                    <button id="SubmiteSBTRForm" type="button" class="btn btn-primary">Confirm Details</button>
                                    <!--<a class="btn btn-link" href="forgot.html">Forgotten your password?</a> -->
                                </div>
                            </form>
                        </div>

                        <!-- Form footer -->
                        <!--<div class="panel-footer"> <span class="required-field">*</span> - required field </div> -->
                    </div>

                    <!-- END Registration form -->

                </div>
            </article>
            <div class="clearfix"></div>
        </div>
    </div>

    <script src="~/Content/js/jquery-2.1.1.min.js"></script>
    <script src="~/Content/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

    <script>
		$(document).ready(function(){
			$('#SaveeSBTRForm').on('click',function(){
				$('#synd-eSBTRform input, #synd-eSBTRform textarea').attr('disabled',':disabled');
				$('#AlertMSG, #EditeSBTRForm, #SubmiteSBTRForm').show(300);
				$(this).hide();
			});
			$('#EditeSBTRForm').on('click',function(){
				$('#synd-eSBTRform input').attr('disabled', false);
				$('#AlertMSG, #SubmiteSBTRForm').hide(300);
				$('#SaveeSBTRForm').show(300);
			});
////////////////////////////////////////////////////
//StampAmount
//RegistrationFeeAmount
//TotalAmount
$('#StampAmount').on('keyup',function(){
	updateTotal();
});
$('#RegistrationFeeAmount').on('keyup',function(){
	updateTotal();
});
var updateTotal = function(){
	var initAmt = 0;
	var StampAmount = parseInt($('#StampAmount').val());
	var RegistrationFeeAmount = parseInt($('#RegistrationFeeAmount').val());
	var TotalAmount = StampAmount + RegistrationFeeAmount;
	var TotupdatedAMt = initAmt += TotalAmount;
	$('#TotalAmount').val(TotupdatedAMt);
}



		});
    </script>
</body>
</html>