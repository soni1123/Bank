                    }
                    else {
                        $("#ddlCity").empty();
                        $("#BranchId").empty();
                    }
                },
                error: function (result) {
                    alert("Error");
                }
            });
        });

        // ddlCity selected value
        $('#ddlCity').change(function () {
            var brnch = $('#BranchList');
