            simpleOResbtr();
        });
        //iveread
        //firstNext

        $('input#iveread').on('click', function () {
            ivereadfun();
        });

        ////////////////////////////////////////////////////////////////

        $('input#ThroughIFSCode, input#ThroughBranchName').on('click', function () {
            if ($('input#ThroughIFSCode').is(':checked') == true) {
                $('#BankIfsCode').css({ 'opacity': '1', 'pointer-events': 'visible' });
                $('#BankBranchName').css({ 'opacity': '0.3', 'pointer-events': 'none' });
                $(".country").hide(150);
            } else {
                $('#BankBranchName').css({ 'opacity': '1', 'pointer-events': 'visible' });
                $('#BankIfsCode').css({ 'opacity': '0.3', 'pointer-events': 'none' });
                $(".country").show(150);
            }
        });


        $('#BankIfsCode').css({ 'opacity': '1', 'pointer-events': 'visible' });
        $('#BankIfsCode').css({ 'opacity': '0.3', 'pointer-events': 'none' });
        ///////////////////////////////////////////////////////////////////

        var selectmodeofpayment = function () {
            if ($('input#radio-lang-1').is(':checked') == true) {
                $('#selectBranch').show(200, function () { simpleOResbtr() });
                $('#selectBranchNamount').hide(200);
            } else {
                $('#selectBranchNamount').show(200);
                $('#selectBranch').hide(200);
            }
        }
        selectmodeofpayment();


        var simpleOResbtr = function () {
            if ($('input#radio-Receipt-1').is(':checked') == true) {
                $('#selectBranch').css({ 'opacity': '0.3', 'pointer-events': 'none' });
            } else {
                $('#selectBranch').css({ 'opacity': '1', 'pointer-events': 'visible' });
            }
        }
        simpleOResbtr();

        var ivereadfun = function () {
            if ($('input#iveread').is(':checked') == true) {
                $('#firstNext').css({ 'opacity': '1', 'pointer-events': 'visible' });
            } else {

                $('#firstNext').css({ 'opacity': '0.3', 'pointer-events': 'none' });
            }
        }
        ivereadfun();

        $('#firstNext').on('click', function () {
            window.location.href = 'index-eSBTR-paymentForm.html';
        });


    });
</script>

<script>
    $(window).load(function () {
        $('#ddlCountry').change(function () {
            var selectedItem = $(this).val();
            $.ajax({
                cache: false,
                type: 'POST',
                url: '@(Url.Action("GetStateList", "Account"))',
                data: {
                    'countryId': selectedItem
                },
                success: function (data) {
                    if (data.length > 1) {
                        $("#ddlState").empty();
                        $(data).each(function () {
                            $('<option value="' + this.Value + '">' + this.Text + '</option>').appendTo($("#ddlState"));
                        });
                    }
                    else {
                        $("#ddlState").empty();
                        $("#ddlDistrict").empty();
                        $("#ddlCity").empty();
                        $("#BranchId").empty();
                    }
                },
                error: function (result) {
                    alert("Error");
                }
            });
        });

        // State selected value
        $('#ddlState').change(function () {
            var selectedItem = $(this).val();
            $.ajax({
                cache: false,
                type: 'POST',
                url: '@(Url.Action("GetDistrictList", "Account"))',
                data: {
                    'stateId': selectedItem
                },
