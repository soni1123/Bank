                        <!-- Form header -->
                        <div class="panel-heading">
                            <h2 class="title">Login</h2> <!---->
                        </div>
                        <div class="panel-body">
                            @Html.Raw(ViewBag.Result)


                            <form role="form" id="synd-eSBTRform">
                                <fieldset>
                                    <div class="col-md-12">
                                        <!--<legend class="spLegend">e-SBTR Payment Details</legend> -->
