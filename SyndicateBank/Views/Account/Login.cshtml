</form>
                        </div>

                        <!-- Form footer -->
                        <!--<div class="panel-footer"> <span class="required-field">*</span> - required field </div> -->
                    </div>

                    <!-- END Registration form -->

                </div>
            </article>
            <div class="clearfix"></div>
        }
